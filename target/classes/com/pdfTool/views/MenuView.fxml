<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<fx:root type="HBox"
         style="-fx-background-color: white"
         prefHeight="30"
         stylesheets="@MenuView.css"
         xmlns:fx="http://javafx.com/fxml">
<!--    Please Ignore the error on onAction="...".
        Exception : 'Controller value already specified' will occur
        if 'fx:controller=...' is added to solve it because the class is already loaded
        when we call <MenuViewController/> in a fxml file.-->
    <Button text="导入文件" onAction="#importPaper"></Button>
    <Button text="导入目录" onAction="#importDir"></Button>
    <Button text="合并所选项" onAction="#mergePDF"></Button>
    <Button text="拆分所选项" onAction="#splitPDF"></Button>
    <Button text="打印所选项" onAction="#print"></Button>
    <Button text="提取所选文件图片" onAction="#getPicture"></Button>
    <Button text="提取所选文件文字" onAction="#getText"></Button>
    <Button text="帮助" onAction="#getHelper"></Button>
</fx:root>
