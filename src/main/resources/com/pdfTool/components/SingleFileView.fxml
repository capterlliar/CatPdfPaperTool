<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.CheckBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<fx:root type="BorderPane"
         fx:id="singleFileViewer"
         stylesheets="@SingleFileView.css"
         xmlns:fx="http://javafx.com/fxml">
    <left>
        <CheckBox fx:id="checkBox"></CheckBox>
    </left>
    <!--center: file name. Loaded in controller.    -->
    <right>
        <HBox>
            <Button>
                <graphic>
                    <FontIcon iconLiteral="fa-edit"/>
                </graphic>
            </Button>
            <Button>
                <graphic>
                    <FontIcon iconLiteral="fa-remove"/>
                </graphic>
            </Button>
        </HBox>
    </right>
</fx:root>
